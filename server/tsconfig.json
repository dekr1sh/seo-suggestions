{
  "compilerOptions": {
      "target": "ESNext",
      "module": "CommonJS",
      "strict": true,
      "sourceMap": true,
      "removeComments": true,
      "outDir": "./dist",                         
      "rootDir": "./src",                         
      "esModuleInterop": true,                    
      "skipLibCheck": true,                       
      "forceConsistentCasingInFileNames": true,   
      "resolveJsonModule": true                   
  },
  "include": [
      "src/**/*.ts"                               
  ],
  "exclude": [
      "node_modules",                             
      "**/*.spec.ts"                              
  ]
}